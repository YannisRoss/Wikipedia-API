<!DOCTYPE html>
<html>
  <head>
    <title>JrossiadisRailsWikiProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id='container'>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    
      <nav id='navbar'>

        <% if current_user%>
          <div id='user-panel'>Hello, <%= current_user.email %>  <br>
            <%= button_to 'Sign out', destroy_user_session_path, method: :delete%>
            <button><%= link_to 'Home', root_path%></button>
          </div>
          <br> <br>
          <%= form_with model: SearchTerm.new, url: search_terms_path do |form| %>
            <%= form.hidden_field :user_id, value: current_user.id %>
            <%= form.label :body, 'Input your search term' %> <br>
            <%= form.text_field :body, :required => true%>
            
            <%= form.submit "Import" %>
          <% end %>
        <% else %>
        <div id='user-panel'>
          <button><%= link_to 'Sign up', new_user_registration_url%></button>
          <button><%= link_to 'Sign in', new_user_session_url%></button>
          <button><%= link_to 'Home', root_path%></button>
        </div>
        <% end %>

      </nav>
      <div id='page-contents'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
